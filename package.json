    "reflect-metadata": "0.1.13",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.2"
  },
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@types/node": "16.11.12",
    "codecov": "3.8.3",
    "cross-env": "7.0.3",
    "jest": "27.4.3",
    "mocha": "9.1.3",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "rimraf": "3.0.2",
    "shx": "0.3.3",
    "travis": "0.1.1",
    "ts-jest": "27.1.0"
  },
  "resolutions": {
    "**/**/set-value": "^2.0.1",
