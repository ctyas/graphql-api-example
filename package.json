{
  "name": "graphql-api-example",
  "version": "2.0.0",
  "main": "./dist/server.js",
  "scripts": {
    "setup": "yarn install",
    "start": "node dist/server.js",
    "serve:live": "ts-node-dev --respawn src/server.ts",
